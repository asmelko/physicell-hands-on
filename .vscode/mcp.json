{
  "servers": {
    "maboss": {
      "type": "stdio",
      "command": "${workspaceFolder}/venv/bin/python",
      "args": [
        "${workspaceFolder}/mcp-biomodelling-servers/MaBoSS/server.py"
      ],
      "env": {
        "PATH": "${workspaceFolder}/venv/bin:${env:PATH}",
        "CONDA_PREFIX": "${workspaceFolder}/venv"
      }
    },
    "neko": {
      "type": "stdio",
      "command": "${workspaceFolder}/venv/bin/python",
      "args": [
        "${workspaceFolder}/mcp-biomodelling-servers/NeKo/server.py"
      ]
    },
    "physicell": {
      "type": "stdio",
      "command": "${workspaceFolder}/venv/bin/python",
      "args": [
        "${workspaceFolder}/mcp-biomodelling-servers/PhysiCell/server.py"
      ]
    }
  },
  "inputs": [
    {
      "id": "memory_file_path",
      "type": "promptString",
      "description": "Path to the memory storage file",
      "password": false
    }
  ]
}